<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashCard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@drawable/solid_shape"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:text="Who's the 44th President of the United States?"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashCard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:background="@drawable/solid_shape2"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="15dp"
        android:background="#DFE395D1"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="321dp"
        android:layout_marginRight="15dp"
        android:background="#DFE395D1"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="407dp"
        android:layout_marginRight="15dp"
        android:background="#DFE395D1"
        android:gravity="center"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark" />

    <ImageButton
        android:id="@+id/hideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="180dp"
        android:src="@android:drawable/checkbox_on_background" />

    <ImageButton
        android:id="@+id/hideButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="180dp"
        android:src="@android:drawable/checkbox_off_background"
        android:visibility="invisible" />

</RelativeLayout>